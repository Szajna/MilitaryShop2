@model IEnumerable<MilitaryShop.Core.Models.Product>

@{
    ViewBag.Title = "Product List";
}

<h2>Admin / Products</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-success", @role = "button" })
</p>
<table class="table">
    <tr>
        <th>
            Image
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img class="img-thumbnail" style="height:50px" src="~/Content/ProductImages/@item.Image"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td width="35%">
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @string.Format("{0:c}", item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
       
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary", @role = "button" })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger", @role = "button" })
        </td>
    </tr>
}

</table>
